generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int         @id @default(autoincrement())
  name           String
  email          String      @unique
  password       String
  stripId        String?
  membershipType Int?
  createdAt      DateTime    @default(now())
  updatedAt      DateTime    @updatedAt
  membership     Membership? @relation(fields: [membershipType], references: [id])
}

model Membership {
  id    Int    @id @default(autoincrement())
  type  String @unique
  price Int
  users User[]
}

model Article {
  id          Int      @id @default(autoincrement())
  title       String
  body        String
  releaseDate DateTime @default(now())
  imgUrl      String
}

model Video {
  id          Int      @id @default(autoincrement())
  title       String
  desc        String
  videoUrl    String
  releaseDate DateTime @default(now())
}
